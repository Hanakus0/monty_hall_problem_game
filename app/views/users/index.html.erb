<% content_for :title, "ユーザー関連画面" %>


<div class="container mx-auto p-6 bg-green-100 border border-green-400 text-green-700 rounded">

<!-- フォーム -->
<% if true %>
  <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4" role="alert">
    <%= notice %>
    <p>お好きなユーザー名を入力してください</p>
  </div>

  <%= render "form", user: @user %>
  
<% end %>

<!-- ユーザー情報表示 -->
  <h1 class="text-3xl font-bold text-gray-800 mr-6 mb-6">ユーザー一覧</h1>

  <div id="users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @users.each do |user| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <%= render user %>
        <p class="mt-4">
          <%= link_to "Show this user", user, class: "text-blue-500 hover:underline" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
